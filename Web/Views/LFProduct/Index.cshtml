@model IEnumerable<Sunshine.Business.Core.LFProduct>
@{
    ViewBag.Title = "意向列表";
    ViewBag.ModuleName = "意向管理";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<style>.t-0{ padding-left:10%;font-size:2px;align:center;}.t-1{ padding-left:10%;font-size:2px;align:center;}.t-2{ padding-left:10%;font-size:2px;}.t-3{ padding-left:10%;}.t-4{ padding-left:10%;}.t-5{ padding-left:10%;}.t-6{ padding-left:10%;}.t-7{ padding-left:10%;}.t-8{ padding-left:10%;}div.c  {cursor: pointer;background: url(images/folder.gif) 0 0 no-repeat; padding-left:0px;}</style>
<section id="tabset">
    <ul>
        <li><a href="#cindex">意向列表</a></li>
    </ul>
<div id="cindex">
<table>
    <thead>
        <tr>
            <th style="width = auto">
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductNum)
            </th>
            <th align="center">
            操作
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryMain.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategorySecond.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.ProductNum)
            </td>
            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("查看", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("删除", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("添加意向", "Create")
</p>
</div>
</section>
