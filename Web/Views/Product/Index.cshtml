@model IEnumerable<Sunshine.Business.Core.Product>
@{
    ViewBag.Title = "产品列表";
    ViewBag.ModuleName = "产品管理";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<section id="tabset">
    <ul>
        <li><a href="#cindex">产品列表</a></li>
    </ul>
<div id="cindex">
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceInterval.PriceIntervalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductProcessor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVideo)
            </th>
            <th align="center">
            操作
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryMain.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategorySecond.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceInterval.PriceIntervalName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.ProductProcessor)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.ProductVideo)
            </td>
            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("查看", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("删除", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("添加产品", "Create")
</p>
</div>
</section>