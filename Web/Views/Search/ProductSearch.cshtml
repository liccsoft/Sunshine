@model IEnumerable<Sunshine.Business.Core.ProductItem>
@{
    ViewBag.Title = "Index";
    Layout = "";
    ViewBag.actionName = "ProductSearch";
}
<div class="fore1 pagin">
@Html.Partial("pagingPart")
</div>
<table id="prodlist">
<thead>
<tr>
<th>@Html.DisplayNameFor(model => model.ProductMark)</th>
<th>@Html.DisplayNameFor(model => model.Setting)</th>
<th>@Html.DisplayNameFor(model => model.Price)</th>
<th>@Html.DisplayNameFor(model => model.Stock)</th>
<th>@Html.DisplayNameFor(model => model.CompanyName)</th>
<th>@Html.DisplayNameFor(model => model.Contact)</th>
<th> </th></tr>
</thead>
<tbody>
@foreach (var item in Model)
{
	<tr>
		<td>@item.ProductMark
	</td><td>@item.Setting 
	</td><td>@item.Price
	</td><td>@item.Stock
	</td><td>@item.CompanyName
	</td><td>@item.Contact
	</td><td>@Html.ActionLink("详细", "ViewDetails", new { id = item.ProductId }, new { target = "_blank" })
		</td> 
	</tr>
}
</tbody>
<tfoot>
</tfoot>
</table>
<div class="fore2 pagin">
@Html.Partial("pagingPart")  
</div>

