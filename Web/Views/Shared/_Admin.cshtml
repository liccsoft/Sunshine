<!DOCTYPE html>
<html lang="zh-hans">
<head><title>@ViewBag.Title</title>
<meta content="max-age=300" http-equiv="cache-control"/>
<meta content="text/html; charset=utf8" http-equiv="content-type"/>
@Styles.Render("~/Styles/css")
@Styles.Render("~/Styles/themes/base/css")
@Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div id="shortcut">
<div class="w">
<ul class="fl lh">
  <li class="fore1 ld"><b></b><a href="javascript:addtofavorite()" rel="nofollow">收藏</a></li>
</ul>
<ul class="fr lh">
     @Html.Partial("_LoginPartial")
</ul>
<ul class="fr lh">
@if (User.IsInRole("Manage"))
{<li class="fore1 ld"><b></b>@Html.ActionLink("后台管理", "index", "Security")</li>}
</ul>
<span class="clr"></span></div></div><!--shortcut end-->
<div id="o-header-2013">
<div id="" class="w">
<div id="logo-2013" class="ld"><a hidefocus="true" 
href="/"><img alt="徽田" src="/images/logo2013.png" 
width="260" height="40"></a></div><!--logo end-->
<nav id="admin-nav">
    <ul id="navitems-2013">
        <li class="fr">@Html.ActionLink("首页", "Index", "Home")</li>
        @if (User.Identity.IsAuthenticated){
        <li class="fr">@Html.ActionLink("个人中心", "Manage", "Account")</li>
            if (Roles.IsUserInRole("admin") || User.Identity.Name == "admin"){
            <li class="fr">@Html.ActionLink("类别管理", "Index", "Category")</li>        
            <li class="fr">@Html.ActionLink("基础数据", "Index", "Foundation")</li>
            }        
        <li class="fr">@Html.ActionLink("产品管理", "Index", "Product")</li>
           
        }
    </ul>
</nav></div>
<div id="">
<dl></dl></div><!--settleup end-->
</div><!--header end-->

<div id="body" class="w">
    <section id="nav-display">@ViewBag.ModuleName > @ViewBag.SubModuleName</section>
    <section id="tabset" class="content-wrapper clear-fix">
    @RenderBody()
    </section>
</div>
<footer>

</footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")

    <script type="text/javascript">
            $(document).ready(function () {
                $("#tabset").tabs({ ajaxOptions: { cache: true} });
            });
    </script>
     @RenderSection("scripts", required: false)
        
</body>
</html>
