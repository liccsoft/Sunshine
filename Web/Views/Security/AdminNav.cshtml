<ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
    @foreach(Sunshine.ViewModels.ModuleModel mdl in ViewData["modules"] as System.Collections.IEnumerable){
    if (mdl.ActionName.Equals(ViewContext.RouteData.Values["Action"].ToString(), StringComparison.CurrentCultureIgnoreCase))
    {
        <li class="@ViewBag.TabActiveStyle"><a href="#@mdl.ActionName">@mdl.Title</a></li>
    } else {
    <li class="@ViewBag.TabStyle">@Html.ActionLink(mdl.Title, mdl.ActionName, mdl.ControllerName) </li>
    }
}
</ul>
