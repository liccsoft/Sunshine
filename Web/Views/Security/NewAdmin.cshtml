@model Sunshine.Business.Core.User

@{
    ViewBag.Title = "添加管理员";
}
@using (Html.BeginForm()) {
 @Html.ValidationSummary(true)
 <p>@ViewBag.Title</p>
 <fieldset>
     <legend>添加管理员</legend>

     <div class="editor-label">
         @Html.LabelFor(model => model.UserName)
     </div>
     <div class="editor-field">
         @Html.EditorFor(model => model.UserName)
         @Html.ValidationMessageFor(model => model.UserName)
     </div>
     <div class="editor-label">
       <label>权限</label>  
     </div>
     <div class="editor-field">
		 <ul>
  @foreach (var i in Roles.GetAllRoles())
  {
     <li><input type="checkbox" name="roles" value="@i" id="@i"/><label class="checkbox" for="@i">@Sunshine.Utility.GetString(i)</label></li> 
  }
	 </ul>
     </div>
     
     <p>
         <input type="submit" value="创建" />
     </p>
 </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Admins")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
