@model IEnumerable<Sunshine.Business.Core.Company>
@{
    Layout = "";   
 }
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id="@item.CompanyId">
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedUserName)
        </td>
        <td>
           <a href="javascript:Choosed(this, @Json.Encode(item))" >选择</a>
        </td>
    </tr>
}

</table>
